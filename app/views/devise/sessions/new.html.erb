<div class="user_form">
  <p class="user_form_title">ログイン</p>

  <%= form_with model: @user, url: user_session_path  do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <%= f.label :name, "アカウント名", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, autocomplete: "name", autofocus: true, class: "form-control", placeholder: "アカウント名を入力" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "ログインする", class: "user_form_btn" %>
  <% end %>
</div>
