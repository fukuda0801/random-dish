<div class="user_form_page">
  <div class="user_form">
    <p class="user_form_title">アカウント情報編集</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row mb-3">
        <%= f.label :name, "アカウント名", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, autocomplete: "name:", class: "form-control", autofocus: true, placeholder: "アカウント名を入力" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password, "新しいパスワード", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", autofocus: true, placeholder: "パスワードを半角英数字６文字以上で入力" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", autofocus: true, placeholder: "パスワードを再度入力" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :current_password, "現在のパスワード", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", autofocus: true, placeholder: "現在のパスワードを入力" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :sex, "性別", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.radio_button :sex, '男性', class: "form-check-input" %>
          <%= f.label :sex, '男性', value: '男性', class: "form-check-label" %>

          <%= f.radio_button :sex, '女性', class: "form-check-input" %>
          <%= f.label :sex, '女性', value: '女性', class: "form-check-label" %>

          <%= f.radio_button :sex, 'その他', class: "form-check-input" %>
          <%= f.label :sex, 'その他', value: 'その他', class: "form-check-label" %>
        </div>
      </div>

      <%= f.submit "変更を保存する", class: "user_form_btn" %>
    <% end %>
    <%= link_to "アカウント情報ページへ戻る", user_path(current_user.id), class: "user_edit_back_btn" %>
  </div>
</div>
